%{
    #include <stdio.h>
    #include <stdlib.h>
    #include <string.h>

    #include "y.tab.h"

    void yyerror (char *s);
    int yylex();
%}

%%
BEGIN\ MONSTER              {;}
END                         {;}
NAME                        { return TOKNAME; }
DESC                        { return TOKDESC; }
COLOR                       { return TOKCOLOR; }
SPEED                       { return TOKSPEED; }
ABIL                        { return TOKABIL; }
HP                          { return TOKHP; }
DAM                         { return TOKDAM; }
SYMB                        { return TOKSYMB; }
RRTY                        { return TOKRRTY; }
[0-9]+\+[0-9]d[0-9]+        { yylval.sval = strdup(yytext); return DICE; }
[0-9]+$                     { yylval.ival = atoi(yytext); return NUMBER; }
[a-zA-Z]$                   { yylval.ival = atoi(yytext); return CHAR; }
[a-zA-Z]+$                  { yylval.sval = strdup(yytext); return STRING; }
[a-zA-Z].+$                 { yylval.sval = strdup(yytext); return PARAGRAPH; }
\n                          { /* ignore end of line */; }
[ \t]                       { /* ignore whitespace */; }
.                           { ; }
%%

